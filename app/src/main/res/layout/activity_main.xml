<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4F5F5"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/prevButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/nextButton"
        android:layout_toStartOf="@+id/addText"
        android:src="@drawable/prev_button" />


    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="115dp"
        android:layout_toEndOf="@+id/addText"
        android:src="@drawable/next_button" />

    <TextView
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/addButton"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="Add new flashcard"
        android:textColor="#565656"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/removeText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/removeButton"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="Remove current flashcard"
        android:textColor="#565656"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/flashcardQuestion"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="#d99ee1"
        android:text="Welcome to the flashcard app! Please tap here."
        android:textColor="@color/colorQuestion"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/flashcardAnswer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#b2eca9"
        android:gravity="center_vertical|center_horizontal"
        android:text="Press the + button to begin adding flashcards."
        android:textColor="@color/colorAnswer"
        android:textSize="38sp"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/addButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/add_button" />

    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/remove_button" />

    <ImageView
        android:id="@+id/randomButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/nextButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/random_button" />
</RelativeLayout>